# DeviseOS Backend Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=DeviseOS Backend
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_GRAPHQL=true
ENABLE_WEBSOCKETS=true
ENABLE_PLUGINS=true

# Database Configuration
DB_URL=postgresql://deviseos:deviseos@localhost:5432/deviseos
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_PRE_PING=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Security Configuration
SECURITY_SECRET_KEY=your-super-secret-key-change-this-in-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Clerk.dev Integration (Optional)
SECURITY_CLERK_SECRET_KEY=
SECURITY_CLERK_PUBLISHABLE_KEY=

# AI Services Configuration
AI_OPENAI_API_KEY=
AI_OPENAI_MODEL=gpt-4
AI_OPENAI_MAX_TOKENS=4000

AI_ANTHROPIC_API_KEY=
AI_ANTHROPIC_MODEL=claude-3-sonnet-20240229

AI_GOOGLE_API_KEY=
AI_GOOGLE_MODEL=gemini-pro

# Local AI Models
AI_LOCAL_LLM_URL=
AI_LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Whisper Configuration
AI_WHISPER_MODEL=base
AI_WHISPER_DEVICE=cpu

# spaCy Configuration
AI_SPACY_MODEL=en_core_web_sm

# Storage Configuration
STORAGE_S3_ENDPOINT=http://localhost:9000
STORAGE_S3_ACCESS_KEY=minioadmin
STORAGE_S3_SECRET_KEY=minioadmin
STORAGE_S3_BUCKET=deviseos
STORAGE_S3_REGION=us-east-1
STORAGE_S3_SECURE=false
STORAGE_LOCAL_STORAGE_PATH=./storage

# Celery Configuration
CELERY_BROKER_URL=amqp://deviseos:deviseos@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Monitoring Configuration
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090

MONITORING_OTEL_ENABLED=true
MONITORING_OTEL_ENDPOINT=

MONITORING_SENTRY_DSN=
MONITORING_SENTRY_ENVIRONMENT=development

MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json

# Plugin Configuration
PLUGIN_PLUGIN_DIR=./plugins
PLUGIN_MAX_PLUGIN_MEMORY_MB=512
PLUGIN_PLUGIN_TIMEOUT_SECONDS=30
PLUGIN_ALLOW_NETWORK_ACCESS=false

# Development Settings
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1 